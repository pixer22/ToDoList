<% for(var i = 0; i < data.length; i++) {%>

<li>
    <span><%=data[i].task%> </span>
    <input type="text" class="readText">
    <button class="deletedTasks buttonStyle" data-id-tasks="<%=data[i]._id%>">remove</button>
    <button class="readTask buttonStyle" data-id-tasks="<%=data[i]._id%>">
        <i class="fa fa-pencil openInput" aria-hidden="true"></i>
        <i class="fa fa-check saveInput" aria-hidden="true"></i>
    </button>
</li>

<% } %>